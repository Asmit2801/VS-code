#include<iostream>
using namespace std;

int lsearch(int target,int arr[],int n)
{
    for(int i=0;i<n;i++)
    {
        if(arr[i]==target)
        {
        return i;
        }
    }
    return -1;
}


int main()
{
    int n;
    cout<<"enter the value of n\n";
    cin>>n;
    
    int arr[n];
    for(int i=0;i<n;i++)
    {
        cout<<"enter the value of array ";
        cin>>arr[i];
    }
    int target;
    cout<<"enter the target ";
    cin>>target;
    cout<<"target value is present at\n"<<lsearch(target,arr,n)<<endl;
    return 0;
}


